<script>
$(()=>{
    $("#btnLogin").click(()=>{
        var params = {"userid":$("#userid").val(), "password":$("#password").val()};
        console.log(params);
        
        $.ajax({
            url:"/member/login",
            method:"POST",
            data:params,
            dataType:"json"
        })
        .done((res)=>{
            console.log(res);
            if(res.result == "1"){
                alert("Login Success!!");
                location.href = "/board";
            }
            else if(res.result == "2"){
                alert("Login Fail..Check your password!");
            }
            else{
                alert("Out of Existence ID");
            }
        })
        .fail((jqXHR, status)=>{
            console.log(status);
        })
    })
});
</script>